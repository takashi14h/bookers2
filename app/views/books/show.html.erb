
<div class="container">
	<div class="row">

		<div class="col-lg-4">
			<div class="">
       			<%= render 'users/list', user: @user %>
      		</div>
      		<div>
       			<%= render 'books/new', book: @book %>
			</div>
		</div>

		<div class="col-lg-8">
			<h2>Book detail</h2>
			<% if flash[:notice] %>
				<div class="flash">
					<%= flash[:notice] %>
				</div>
			<% end %>
			<table  class="table table-striped">
					<tr>
						<td>
							<%= attachment_image_tag @books.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
						</td>
						<td>
							<%= @books.title %>
						</td>
						<td>
							<%= @books.body %>
						</td>
						<% if @user.id == current_user.id %>
						<td>
							<%= link_to "Edit", edit_book_path(@books.id), class: "edit_book_#{@books.id}" %>
						</td>
						<td>
							<%= link_to "Destroy", book_path(@books.id), class: "destroy_book_#{@books.id}", method: :delete, "data-confirm" => "Are you sure?" %>
						</td>
						<% end %>
					</tr>
			</table>
		</div>
	</div>
</div>



