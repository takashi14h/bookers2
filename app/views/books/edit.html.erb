<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
	<div id="error_explantion">
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<h4>Title</h4>
<%= f.text_field :title,class: "book_title" %>

<h4>Opinion</h4>
<%= f.text_area :body,class: "book_body" %>
<br>
<%= f.submit "Update Book" %>

<% end %>


<%= link_to "Show", book_path(@book),class: "show_#{@book.id}" %>
<%= link_to "Back", books_path,class: "back" %>