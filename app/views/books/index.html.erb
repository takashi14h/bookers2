
<div class="container">
	<div class="row">

		<div class="col-lg-4">
			<li class="">
       			<%= link_to 'マイページ', user_path(current_user.id) %>
      		</li>
			<h2>New book</h2>
			<%= form_for(@book) do |f| %>
			<% if @book.errors.any? %>
				<div id="error_explantion">
					<ul>
						<% @book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

				<h4>Title</h4>
				<%= f.text_field :title,class: "book_title" %>

				<h4>Opinion</h4>
				<%= f.text_area :body,class: "book_body" %>

				<div>
					<%= f.submit "Create Book" %>
				</div>
			<% end %>
		</div>

		<div class="col-lg-8">
			<h2>Books</h2>
			<table  class="table table-striped">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
				<% @books.each do |book| %>
					<tr>
						<td>
							<%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
						</td>
						<td>
							<%= link_to book.title, book_path(book.id) %>
						</td>
						<td>
							<%= book.body %>
						</td>
					</tr>
				<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>



