<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookers2</title>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
  </head> 

  <body>

    <div class="header" >
      <nav class="navbar navbar-main navbar-shadow" role="navigation" >
        <div class="container relative">
          <div class="navbar-header">
            <a class="navbar-logo" href="/">
              <h2>Bookers</h2>
            </a>
   
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div >
            <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
              <% if user_signed_in? %>
               <li class="">
                  <%= link_to "ホーム", user_path(current_user), class: "home" %>
               </li>
               <li class="">
                  <%= link_to "user一覧", users_path, class: "users" %>
               </li>
               <li class="">
                  <%= link_to "book一覧", books_path, class: "books" %>
               </li>
               <li class="">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "logout" %>
               </li>
              <% else %>
               <li class="">
                  <%= link_to "トップ", new_top_path, class: "home" %>
               </li>
               <li class="">
                  <%= link_to "アバウト", tops_path, class: "about" %>
               </li>
              <li class="">
                <%= link_to "サインアップ", new_user_registration_path, class: "sign_up" %>
              </li>
              <li class="">
                <%= link_to "ログイン", new_user_session_path, class: "sign_in" %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  
    <%= yield %>

   <footer class="footer style-2">
      <div class="container">
        <div class="row">
          <div class="col-md-8">
            <div class="col">
            </div>
          </div>
          <div class="col-md-4">
            <div class="col">
              <h4>CopyRight Infratop.inc</h4>
            </div>
          </div>
        </div>
      </div>
    </footer>
    
  </body>
</html>
